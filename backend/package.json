{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:migrate": "knex --knexfile knexfile.js migrate:latest",
    "db:rollback": "knex --knexfile knexfile.js migrate:rollback",
    "db:seed": "knex --knexfile knexfile.js seed:run",
    "db:reset": "npm run db:rollback -- --all && npm run db:migrate && npm run db:seed",
    "pretest": "NODE_ENV=test knex --knexfile knexfile.js migrate:rollback --all && NODE_ENV=test knex --knexfile knexfile.js migrate:latest && NODE_ENV=test knex --knexfile knexfile.js seed:run",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "knex-cli": "^1.0.1",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
